# ==========================================================================
# Vyuha — Environment Variables
# ==========================================================================
# Copy this file to .env and fill in your actual keys.
#   cp .env.example .env

# --- Blaxel AI (Model Gateway + Deployment) ---
BLAXEL_API_KEY=bl_your_api_key_here
BLAXEL_WORKSPACE=rs
BLAXEL_MODEL_NAME=sandbox-openai
BL_API_KEY=bl_your_api_key_here

# Dashboard target (local by default; set to Blaxel base URL for cloud demos)
VYUHA_API_URL=http://localhost:8000

# --- White Circle AI (Security Guard-Rail) — REQUIRED for /act validation ---
WHITE_CIRCLE_API_KEY=wc_your_api_key_here
WHITE_CIRCLE_DEPLOYMENT_ID=your_deployment_id_here
WHITE_CIRCLE_BASE_URL=https://us.whitecircle.ai
WHITE_CIRCLE_VERSION=2025-12-01
# Legacy alias (optional)
WHITE_CIRCLE_POLICY_ID=your_policy_id_here

# --- For Blaxel deployment: set these in Blaxel project/dashboard ---
# BLAXEL_API_KEY, BLAXEL_WORKSPACE (often auto-injected)
# WHITE_CIRCLE_API_KEY, WHITE_CIRCLE_DEPLOYMENT_ID (required for Shield)
# WHITE_CIRCLE_BASE_URL, WHITE_CIRCLE_VERSION (optional; in blaxel.toml [env])# --- Overshoot AI (Visual Threat Detection — Multimodal) ---
OVERSHOOT_API_KEY=ovs_your_api_key_here
OVERSHOOT_BASE_URL=https://cluster1.overshoot.ai/api/v0.2

# --- Optional ---
GEMINI_API_KEY=your_gemini_api_key_here
